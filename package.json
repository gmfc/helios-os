{
  "name": "helios-os",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "cd host && tauri dev",
    "dev:ui": "tsx tools/build.ts --dev --watch --serve",
    "dev:host": "cd host && tauri dev",
    "dev:host:release": "cd host && tauri dev --release",
    "dev:release": "pnpm dev:host:release",
    "build:apps": "tsx tools/build-apps.ts",
    "build": "pnpm build:apps && tsx tools/build.ts --prod",
    "build:release": "pnpm build && cd host && tauri build",
    "helios": "tsx tools/helios.ts",
    "update-snapshot": "tsx tools/helios.ts update-snapshot",
    "test": "vitest run",
    "lint": "ESLINT_USE_FLAT_CONFIG=false eslint -c .eslintrc.cjs \"**/*.{ts,tsx}\"",
    "precommit": "pnpm lint && pnpm test"
  },
  "dependencies": {
    "@pablo-lion/xterm-react": "^1.1.2",
    "@tauri-apps/api": "^2.5.0",
    "@tauri-apps/plugin-clipboard-manager": "^2.2.2",
    "@tauri-apps/plugin-sql": "^2.2.0",
    "@xterm/addon-fit": "^0.10.0",
    "@xterm/xterm": "^5.3.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-draggable": "^4.4.6",
    "react-resizable": "^3.0.5",
    "tar": "^7.4.3"
  },
  "devDependencies": {
    "@swc/core": "^1.3.107",
    "@tauri-apps/cli": "^2.5.0",
    "@types/node": "^22.15.30",
    "@types/react": "^18.2.55",
    "@types/react-dom": "^18.2.19",
    "@types/react-resizable": "^3.0.7",
    "@typescript-eslint/eslint-plugin": "^8.34.0",
    "@typescript-eslint/parser": "^8.34.0",
    "esbuild": "^0.20.0",
    "eslint": "^9.28.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-react": "^7.37.5",
    "jsdom": "^26.1.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.4",
    "typescript": "^5.3.3",
    "vitest": "^3.2.3"
  }
}
